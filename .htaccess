# Desabilitar listagem de diretórios
Options -Indexes

# To prevent access to .env and other files
<Files .*>
# Apache 2.2
<IfModule !mod_authz_core.c>
Order deny,allow
Deny from all
</IfModule>
# Apache 2.4
<IfModule mod_authz_core.c>
Require all denied
</IfModule>
</Files>

# Redirecionar tudo para o diretório public/ internamente (sem mostrar /public na URL)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Verifica o domínio e redireciona para public/ se a URI não começar com public/
    RewriteCond %{HTTP_HOST} ^adventistascentralbrasilia.org$ [NC,OR]
    RewriteCond %{HTTP_HOST} ^www.adventistascentralbrasilia.org$ [NC]
    RewriteCond %{REQUEST_URI} !public/
    RewriteRule (.*) /public/$1 [L]
</IfModule>